<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CaloriePlannerApp.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Label Text="Welcome to Calorie Planner!"
                   Style="{StaticResource Headline}"
                   SemanticProperties.HeadingLevel="Level1"
                   TextColor="Black" />

            <Label Text="Calorie Planner is a personal health and fitness application designed to help you track your daily calorie intake, monitor your progress, and set customized goals."
                   Style="{StaticResource SubHeadline}"
                   SemanticProperties.HeadingLevel="Level2"
                   TextColor="Black" />

            <Label Text="Key Features:"
                   Style="{StaticResource SubHeadline}"
                   TextColor="Black" />

            <Label Text="- Track your daily calorie intake"
                   TextColor="Black" />
            <Label Text="- Set and monitor personal goals"
                   TextColor="Black" />
            <Label Text="- Choose your activity level and see personalized recommendations"
                   TextColor="Black" />
            <Label Text="- Get nutrition breakdowns"
                   TextColor="Black" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
